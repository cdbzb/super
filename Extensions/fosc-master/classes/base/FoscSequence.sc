    /* --------------------------------------------------------------------------------------------------------
    • ==

    a = FoscSequence(#[1,2,3]);
    b = FoscSequence(#[1,2,3]);
    c = FoscSequence([1,2,4]);
    a == b;
    a == c;
    -------------------------------------------------------------------------------------------------------- */
    == { |object|
        if (this.species != object.species) { ^false };
        if (this.size != object.size) { ^false };
        items.do { |each, i| if (each != object[i]) { ^false } };
        ^true
    }
    /* --------------------------------------------------------------------------------------------------------
    • !=

    a = FoscSequence(#[1,2,3]);
