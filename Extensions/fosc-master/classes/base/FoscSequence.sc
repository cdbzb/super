    var <items;
    ///////////////////////////////////////////////////////////////////////////////////////////////////////////
    // INIT
    ///////////////////////////////////////////////////////////////////////////////////////////////////////////
    *new { |items|
        if (items.isSequenceableCollection.not && { items.respondsTo('items') }) {
            items = items.items;
        };
        ^super.newCopyArgs(items);
    }
    ///////////////////////////////////////////////////////////////////////////////////////////////////////////
    // PUBLIC INSTANCE METHODS
